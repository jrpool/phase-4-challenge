        <p><%= reviewView.submission_date %></p>
        <p><%= reviewView.review %></p>
        <p class="<%= reviewDeleteToolClass %>"><button type="button"><a href="/reviews/<%= reviewView.id %>/delete/confirm">ðŸ—‘</a></button></p>
    </div>
    <% }) %>
