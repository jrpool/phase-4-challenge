<%- include header.ejs %>

  <h2>Profile: <%= user.name %></h2>
  <p><em><%= user.email %></em></p>
  <p><em><%= user.join_date %></em></p>

  <h2>Reviews</h2>

  <div class="review-list">
    <% reviewViews.forEach(function(reviewView) { %>
      <div>
        <h5><%= reviewView.album %></h5>
        <p><%= reviewView.submission_date %></p>
        <p><%= reviewView.review %></p>
      </div>
    <% }) %>
  </div>

</body>
</html>
